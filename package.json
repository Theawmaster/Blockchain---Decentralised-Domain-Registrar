{
  "name": "blockchain---decentralised-domain-registrar",
  "version": "1.0.0",
  "description": "A blockchain-based decentralized domain registrar built with [Hardhat](https://hardhat.org/) and Solidity.   The project allows users to register, manage, and transfer domain names on-chain securely.",
  "main": "index.js",
  "directories": {
    "doc": "docs",
    "test": "test"
  },
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "coverage": "hardhat coverage",
    "gas": "REPORT_GAS=1 hardhat test",
    "size": "hardhat size-contracts",
    "node": "hardhat node",
    "deploy:sepolia": "hardhat run scripts/deploy.ts --network sepolia",
    "blocknum:sepolia": "hardhat run scripts/block-number.ts --network sepolia"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "dotenv": "^17.2.2",
    "hardhat": "^2.26.3",
    "hardhat-contract-sizer": "^2.10.1",
    "hardhat-gas-reporter": "^2.3.0",
    "solidity-coverage": "^0.8.16",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.4.0"
  }
}
